<h1>New Company</h1>

<% if @company_profile.errors.any? %>
		<%= @company_profile.errors.full_messages %>
	<% end %>

<%= form_with model: @company_profile, local: true do |form| %>
	<p>
 		<%= form.label :company_name %><br>
 		<%= form.text_field :company_name %>
	</p>

	<p>
	<%= form.label :email %><br>
	<%= form.text_field :email %>
	</p>

	<p>
	<%= form.label :location %><br>
	<%= form.text_field :location %>
	</p>

	<p>
	<%= form.label :status %><br>
	<%= form.select :status, ['active', 'inactive'] %>
	</p>

	<p>
		<%= form.submit %>
	</p>

	<% end %>

	<%= link_to 'Back', company_profiles_path %>